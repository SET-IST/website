// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String    @map("providerAccountId")
  providerId            String    @map("provider")
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @map("accessToken") @db.Text
  refreshToken          String?   @map("refresh_token") @db.Text
  idToken               String?   @map("id_token") @db.Text
  accessTokenExpiresAt  DateTime? @map("expires_at")
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime? @default(now())
  updatedAt             DateTime? @updatedAt

  @@unique([providerId, accountId])
}

model Session {
  id        String    @id @default(cuid())
  expiresAt DateTime  @map("expires")
  token     String    @unique @map("sessionToken")
  ipAddress String?
  userAgent String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UserType {
  Student
  Company
  Staff
}

enum CompanyCategory {
  Platinum
  Gold
  Silver
  NotAttending
}

// Add activities to students
model StudentDetails {
  id                 Int                  @id @default(autoincrement())
  cvLocation         String?              @db.VarChar(128)
  scans              Int                  @default(0)
  points             Int                  @default(0)
  dayTotalPoints     DayTotalPoints[]
  course             String               @db.VarChar(128)
  university         String               @db.VarChar(128)
  phoneNumber        String?
  companies_ids      String[]
  companies          CompanyDetails[]
  user               User                 @relation(fields: [userId], references: [id])
  userId             String               @unique
  awardToken         AwardToken?
  redeemedPrizes     RedeemedPrize[]
  redeems            Int                  @default(0)
  enrolledActivities ActivityEnrollment[]
}

model DayTotalPoints {
  day              Day            @relation(fields: [dayId], references: [id])
  dayId            Int
  total_points     Int            @default(0)
  StudentDetails   StudentDetails @relation(fields: [studentDetailsId], references: [id])
  studentDetailsId Int

  @@unique([dayId, studentDetailsId])
}

// add activities to companies
model CompanyDetails {
  id         Int              @id @default(autoincrement())
  category   CompanyCategory
  scans      Int              @default(0)
  students   StudentDetails[]
  activities Activity[]
  user       User             @relation(fields: [userId], references: [id])
  userId     String           @unique

  description String  @db.VarChar(500)
  linkHref    String?
  linkText    String? @db.VarChar(40)

  // The days this company will be present at the event
  days Day[]
}

model User {
  id              String          @id @default(uuid())
  name            String
  username        String?         @unique
  email           String          @unique
  emailVerified   Boolean         @default(false)
  image           String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime?       @updatedAt
  readChangelog   Boolean         @default(true)
  accounts        Account[]
  sessions        Session[]
  role            UserType        @default(Student)
  displayUsername String?
  studentDetails  StudentDetails?
  companyDetails  CompanyDetails?

  // Existing relation
  EventLog        EventLog[] @relation("EventActor") 

  // Add the new inverse relation for target
  TargetEventLogs EventLog[] @relation("EventTarget")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// create the activity model
enum ActivityType {
  Lecture
  Workshop
  SpeedInterview
}

model ActivityEnrollment {
  userId     String
  student    StudentDetails @relation(fields: [userId], references: [userId])
  activityId Int
  activity   Activity       @relation(fields: [activityId], references: [id])
  confirmed  Boolean

  @@unique(name: "enrollmentId", [userId, activityId])
}

model Activity {
  id          Int          @id @default(autoincrement())
  idHash      String       @unique
  title       String       @db.VarChar(128)
  description String       @db.VarChar(512)
  date        DateTime
  dayId       Int
  day         Day          @relation(fields: [dayId], references: [id])
  duration    Int
  location    String       @db.VarChar(80)
  points      Int?
  validated   Boolean      @default(false)
  type        ActivityType

  companies CompanyDetails[]

  enrollments ActivityEnrollment[]

  EventLogs EventLog[]
}

// create the QRCode model
enum ObjectType {
  COMPANY
  REDEEM
}

model qrCode {
  id         String     @id @default(uuid())
  objectId   String
  objectType ObjectType

  @@map("QRCode")
}

enum AwardType {
  NORMAL
  SPECIAL
}

model AwardToken {
  id      String         @id @default(uuid())
  type    AwardType
  userId  String         @unique
  student StudentDetails @relation(fields: [userId], references: [userId])
  award   Award          @relation(fields: [awardId], references: [id])
  awardId Int
}

model Award {
  id              Int             @id @default(autoincrement())
  name            String
  amountAvailable Int // The available amount of this prize
  type            AwardType
  AwardToken      AwardToken[]
  RedeemedPrize   RedeemedPrize[]

  EventLogs EventLog[]
}

model RedeemedPrize {
  id               Int            @id @default(autoincrement())
  award            Award          @relation(fields: [awardId], references: [id])
  awardId          Int
  type             AwardType
  StudentDetails   StudentDetails @relation(fields: [studentDetailsId], references: [id])
  studentDetailsId Int
}

enum CurrentDayState {
  Active // When the day is in the next/current event
  Inactive // When not
}

model Day {
  id             Int              @id @default(autoincrement())
  dateCode       String           @unique
  date           DateTime         @db.Date
  state          CurrentDayState  @default(Inactive)
  companies      CompanyDetails[]
  DayTotalPoints DayTotalPoints[]

  activities Activity[]
}

enum PointSetting {
  REDEEM
  RATIO
  REWARD
  LECTURE
  WORKSHOP
  SPEED_INTERVIEW
}

model RedemptionSettings {
  amount  Int
  setting PointSetting @unique
}

enum EventLogType {
  POINTS
  AWARDS
  ENROLLMENTS
}

model EventLog {
  id            Int          @id @default(autoincrement())
  timestamp     DateTime     @default(now())
  type          EventLogType
  description   String

  // Who performed the action
  actorId       String
  actor         User         @relation("EventActor", fields: [actorId], references: [id])

  // Optional: Who was affected by the action (e.g. a student)
  targetId      String?
  target        User?        @relation("EventTarget", fields: [targetId], references: [id])

  // Optional: Reference to related object (award, activity, etc.)
  awardId       Int?         // e.g., if type == AWARDS
  award         Award?       @relation(fields: [awardId], references: [id])

  activityId    Int?         // e.g., if type == ENROLLMENTS
  activity      Activity?    @relation(fields: [activityId], references: [id])
}